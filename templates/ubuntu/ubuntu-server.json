{
    "variables": {
        "boot_command_prefix": "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "cleanup_pause": "",
        "cpus": "1",
        "custom_script": "templates/ubuntu/script/custom-script.sh",
        "disk_size": "65536",
        "ftp_proxy": "{{env `ftp_proxy`}}",
        "headless": "",
        "http_proxy": "{{env `http_proxy`}}",
        "https_proxy": "{{env `https_proxy`}}",
        "install_vagrant_key": "true",
        "iso_checksum": "",
        "iso_checksum_type": "",
        "iso_name": "",
        "iso_path": "isos",
        "iso_url": "",
        "locale": "en_US",
        "memory": "512",
        "no_proxy": "{{env `no_proxy`}}",
        "preseed" : "preseed.cfg",
        "rsync_proxy": "{{env `rsync_proxy`}}",
        "hostname": "vagrant",
        "ssh_fullname": "packer",
        "ssh_password": "packer",
        "ssh_username": "packer",
        "update": "false",
        "vagrantfile_template": "",
        "version": "0.1.0",
        "vm_name": "ubuntu-server"
      },
    "builders": [
        {
            "boot_command": [
                "{{ user `boot_command_prefix` }}",
                "set gfxpayload=1024x768<enter>",
                "linux /install/vmlinuz ",
                "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/{{ user `preseed`}} ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{.Name}} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
                "keyboard-configuration/variant=USA console-setup/ask_detect=false <enter>",
                "initrd /install/initrd.gz<enter>",
                "boot<enter>"
            ],
            "boot_wait":"{{ user `boot_wait` }}",
            "communicator":"ssh",
            "cpu": "{{user `cpus`}}",
            "disk_size": "{{user `disk_size`}}",
            "enable_secure_boot": false,
            "generation": 2,
            "guest_additions_mode": "disable",
            "headless": "{{ user `headless` }}",
            "http_directory": "templates/ubuntu/http",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_urls": [
                "{{ user `iso_path` }}/{{ user `iso_name` }}",
                "{{ user `iso_url` }}"
            ],
            "mac_address":"00e510000001",
            "output_directory": "output-{{ user `vm_name` }}-hyperv-iso",
            "ram_size": "{{user `memory`}}",
            "shutdown_command": "echo 'packer' | sudo -S -E shutdown -P now",
            "ssh_host":"builder.ryezone.lab",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_timeout" : "20m",
            "switch_name":"{{user `hyperv_switchname`}}",
            "type": "hyperv-iso",
            "vm_name":"{{user `vm_name`}}"
        }
    ],
    "post-processors": [
        {
            "keep_input_artifact": false,
            "output": "box/{{.Provider}}/{{user `vm_name`}}-{{user `version`}}.box",
            "type": "vagrant",
            "vagrantfile_template": "{{ user `vagrantfile_template` }}"
        }
    ],
    "provisioners": [
        {
        "environment_vars": [
            "CLEANUP_PAUSE={{user `cleanup_pause`}}",
            "UPDATE={{user `update`}}",
            "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
            "SSH_USERNAME={{user `ssh_username`}}",
            "SSH_PASSWORD={{user `ssh_password`}}",
            "http_proxy={{user `http_proxy`}}",
            "https_proxy={{user `https_proxy`}}",
            "ftp_proxy={{user `ftp_proxy`}}",
            "rsync_proxy={{user `rsync_proxy`}}",
            "no_proxy={{user `no_proxy`}}"
        ],
        "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
        "scripts": [
            "templates/ubuntu/script/update.sh",
            "templates/ubuntu/script/vagrant.sh",
            "templates/ubuntu/script/sshd.sh",
            "templates/ubuntu/script/motd.sh",
            "{{user `custom_script`}}",
            "templates/ubuntu/script/minimize.sh",
            "templates/ubuntu/script/cleanup.sh"
        ],
        "type": "shell",
        "expect_disconnect": "true"
        }
    ]
  }